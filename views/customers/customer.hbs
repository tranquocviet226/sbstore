<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Khách hàng</h1>
  <p class="mb-4">Danh sách tất khách hàng đã đăng kí</p>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <a href="/customer/create" class="btn btn-info btn-sm">Thêm khách hàng</a>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>#</th>
              <th>Họ và tên</th>
              <th>Tuổi</th>
              <th>Số điện thoại</th>
              <th>Địa chỉ</th>
              <th>Tổng tiền</th>
              <th>Trạng thái</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>#</th>
              <th>Họ và tên</th>
              <th>Tuổi</th>
              <th>Số điện thoại</th>
              <th>Địa chỉ</th>
              <th>Tổng tiền</th>
              <th>Trạng thái</th>
            </tr>
          </tfoot>
          <tbody>
            {{#each customers}}
            <tr>
              <td style="vertical-align: middle;">{{this.noNum}}</td>
              <td style="vertical-align: middle;">{{this.customerName}}</td>
              <td style="vertical-align: middle;">{{this.customerAge}}</td>
              <td style="vertical-align: middle;">{{this.customerPhone}}</td>
              <td style="vertical-align: middle;">{{this.customerAddress}}</td>
              <td style="vertical-align: middle;">{{this.customerAmount}} VND</td>
              <td style="vertical-align: middle;">
                <a href="/customer/delete/{{this._id}}" class="btn btn-success btn-circle">
                  <i class="fas fa-check"></i>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->