<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Sản phẩm</h1>
  <p class="mb-4">Danh sách tất mặt hàng trong hệ thống</p>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <a href="/product/create" class="btn btn-info btn-sm">Thêm sản phẩm</a>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>#</th>
              <th>Ảnh</th>
              <th>ID</th>
              <th>Tên mặt hàng</th>
              <th>Số lượng</th>
              <th>Đơn giá</th>
              <th>Ngày nhập</th>
              <th>Ghi chú</th>
              <th>Chỉnh sửa</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>#</th>
              <th>Ảnh</th>
              <th>ID</th>
              <th>Tên mặt hàng</th>
              <th>Số lượng</th>
              <th>Đơn giá</th>
              <th>Ngày nhập</th>
              <th>Ghi chú</th>
              <th>Chỉnh sửa</th>
            </tr>
          </tfoot>
          <tbody id="myTable">
            {{#each products}}
            <tr>
              <td>{{this.noNum}}</td>
              <td>
                <a href="javascript:;">
                  <img class="rounded" width="50" height="50" src="imgProduct/{{this.productImage}}" />
                </a>
              </td>
              <td>{{this.productId}}</td>
              <td>{{this.productName}}</td>
              <td>{{this.productQuantity}}</td>
              <td>{{this.productPrice}}</td>
              <td>{{this.productDate}}</td>
              <td>{{this.productDescription}}</td>
              <td>
                <a href="/product/update/{{this._id}}" class="btn btn-info btn-sm">Sửa</a>
                <a href="/product/delete/{{this._id}}" class="btn btn-danger btn-sm">Xóa</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>  
  </div>

</div>
<!-- /.container-fluid -->