<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image">
                    {{!-- <img src="http://localhost:3000/imgUser/{{avatar}}"/> --}}
                </div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Cập nhật thông tin</h1>
                        </div>
                        <form class="user" action="/user/update/{{id}}" enctype="multipart/form-data" method="POST">
                        <div class="text-dark">Email</div>
                            <div class="form-group">
                                <input type="email" name="email" class="form-control form-control-user"
                                    value="{{email}}" required>
                            </div>
                            <div class="text-dark">Mật khẩu</div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="password" name="password" class="form-control form-control-user"
                                       value="{{password}}" required>
                                </div>
                            </div>
                            <div class="text-dark">Họ và tên</div>
                            <div class="form-group">
                                <input type="text" name="fullname" class="form-control form-control-user"
                                    value="{{title}}" required>
                            </div>
                            <div class="text-dark">Số điện thoại</div>
                            <div class="form-group">
                                <input type="text" name="phone" class="form-control form-control-user" 
                                value="{{phone}}" required>
                            </div>
                            <div class="text-dark">Ngày sinh</div>
                            <div class="form-group">
                                <input type="date" name="birthday" class="form-control form-control-user"
                                    value="{{birthday}}">
                            </div>
                            <div class="col-md-12">
                                <label for="customer-img"><b>Ảnh đại diện</b></label><br>
                                <input type="file" name="avatar" required>
                            </div>
                            </br>
                            <hr>
                            <input class="btn btn-primary btn-user btn-block" type="submit" value="Cập nhật">
                            <a href="/home" class="btn btn-primary btn-user btn-block">
                                Hủy
                            </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>